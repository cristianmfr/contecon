{
  "extends": "@contecon/typescript/node.json",
  "include": ["src/**/*", "@types/*.d.ts", "emails/**/*"],
  "compilerOptions": {
    "composite": false,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "strictNullChecks": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules", ".react-email"]
}
